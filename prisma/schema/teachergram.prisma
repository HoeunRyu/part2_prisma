model User {
    id        String  @id @default(uuid())
    nickName  String
    introduce String
    isActive  Boolean

    userResponse userResponse?
}

// 티쳐그램 문제 목록
model Questions {
    id           String @id @default(uuid())
    questionText String
}

// 티쳐그램 선택지 목록
model Answers {
    id String @id @default(uuid())
}

// 강사 유형
model teacherType {
    id                     String   @id @default(uuid())
    typeName               String // 강사 유형
    description            String //강사 유형 설명
    tags                   String[] //강사 유형 태그
    recommendedSubjects    String[] //추천 과목 리스트
    notRecommendedSubjects String[] //비추천과목 리스트
    matchingTeacher        String // 잘 맞는 강사 유형
    antiMatchingTeacher    String // 안 맞는 강사 유형
    matchingStudent        String // 잘 맞는 학생 유형
    antiMatchingStudent    String // 안 맞는 학생 유형
}

// 사용자 응답
model userResponse {
    id                String      @id @default(uuid())
    userId            String      @unique // 연결된 사용자 ID
    user              User        @relation(fields: [userId], references: [id], onDelete: Cascade) //User모델 참조 
    questionID        String // 연결된 질문 ID
    question          Questions   @relation(fields: [questionID], references: [id])
    answerID          String // 사용자가 선택한 답변 ID
    answer            Answers     @relation(fields: [answerID], references: [id])
    teacherTypeResult String //응답에 따른 강사 유형
    teacherType       teacherType @relation(fields: [teacherTypeResult], references: [id])
}

//결과
model results {
    id                String       @id @default(uuid())
    userId            String       @unique //연결된 사용자 ID
    user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
    teacherTypeResult String //분석된 강사 유형
    teacherType       userResponse @relation(fields: [teacherTypeResult], references: [id])
}
